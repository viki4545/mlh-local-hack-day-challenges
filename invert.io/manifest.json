{
    "name": "invert.io",
    "description": "Go from dark mode to light mode and vice versa",
    "version": "1.0.0",
    "manifest_version": 2,
    "background":{
        "scripts":[
            "popup.js"
        ],
        "persistent":true
    },
    "browser_action": {
        "default_title": "invert.io",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]

}
